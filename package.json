{
  "name": "install-cargo-prebuilt-action",
  "description": "Install cargo prebuilt to a runner and some packages if you want.",
  "version": "4.0.6",
  "author": "harmless-tech, cargo-prebuilt",
  "private": true,
  "homepage": "https://github.com/cargo-prebuilt/cargo-prebuilt-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cargo-prebuilt/cargo-prebuilt-action.git"
  },
  "bugs": {
    "url": "https://github.com/cargo-prebuilt/cargo-prebuilt-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build src/index.ts --license licenses.txt",
    "test": "jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.2",
    "@jest/globals": "^30.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "<9",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^30.0.3",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
